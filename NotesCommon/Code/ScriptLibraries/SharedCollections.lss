' usuwa wartość z tablicy
' doc - dokument z polem
' field - nazwa pola wielowartościowego
' value - wartość do usunięcia
' return - true usunięto wartość, false wartość nie istniała
Function RemoveItemFromArray(doc As NotesDocument, Field As String, value As String) As Boolean
    Dim array As Variant
    Dim idx As Variant
    
    array = doc.GetItemValue(Field)
    idx = ArrayGetIndex(array, value)
    If Not IsNull(idx) Then
        array(idx) = ""
        Call doc.ReplaceItemValue(Field, FullTrim(array))
        RemoveItemFromArray = True
    Else 
        RemoveItemFromArray = False
    End If          
End Function




'++LotusScript Development Environment:2:1:AddItemToArray:6:8
' dodaje wartość do tablicy jeżeli ta wartość nie istniała
' doc - dokument w którym znajduje się pole 
' field - nazwa pola wielowartościowego
' value - wartość którą dodać
' return - true jeżeli dodano, false jeżeli element istniał - nie dodano
Function AddItemToArray(doc As NotesDocument, Field As String, value As String) As Boolean
    Dim item As NotesItem
    Dim array As Variant
    Dim idx As Variant
    
    Set item = doc.GetFirstItem(Field)
    If item Is Nothing Then
        Call doc.ReplaceItemValue(Field, value)
        AddItemToArray = True
        Exit Function
    End If
    array = item.Values
    idx = ArrayGetIndex(array, value)
    If IsNull(idx) Then
        Call item.AppendToTextList(value)
        AddItemToArray = True
    Else 
        AddItemToArray = False      
    End If              
End Function



