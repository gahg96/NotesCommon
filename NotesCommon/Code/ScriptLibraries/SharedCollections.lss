' usuwa elementy null z tablicy
Sub PackArray(AArray As Variant) 
    Dim count As Integer
    Dim i As Integer
    
    count = 0
    For i = 0 To UBound(AArray)
        If Not IsNull(AArray(i)) Then
            AArray(count) = AArray(i)
            count = count + 1
        End If
    Next
    If count = 0 Then
        AArray = Null
    Else
        ReDim Preserve AArray(count - 1)
    End If
End Sub





